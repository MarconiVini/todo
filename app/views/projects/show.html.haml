%h2= @project.name
%h4 Todo list
%p 
  %b
    project
  =link_to @project.github, @project.github, target: "_blank"
%br
%br

%section.todo
  %ul.todo-controls
    %li
      %a.icon-add "Add"
    %li
      %a.icon-delete "Delete"
    %li.right
      %a.icon-settings Settings

  %ul.todo-list
    -@project.todo_lists.each do |todo|
      %li{class: (todo.finished? ? "done" : "not-done")}
        %a.toggle 
        =todo.todo
    %li
      =form_for([@project, @project.todo_lists.build]) do |f|
        =f.text_field :todo

  %ul.todo-pagination
    %li.previous
      %span
        %i.icon-previous 
        Anterior
      
    %li.next
      %a
        Next
        %i.icon-next

%br
%br
%br